#!/bin/bash
#
# Summary: Install packages.
# Options: [<pkg-name>]
#
set -e

subcommand=${0##*/poac-}
if [[ "$1" == '--help' || "$1" == '-h' ]]; then
	exec "${POAC_ROOT}/libexec/poac---help" $subcommand
elif [[ "$#" -gt 0 ]]; then
	source "${POAC_ROOT}/libexec/poac-yaml" ./poac.yml
	echo $app
else
	echo "poac ${subcommand}: illegal option -- $@"
	exec "${POAC_ROOT}/libexec/poac---help" $subcommand
fi
# pkg=("$@")
# $(poac search ${pkg[0]})
# curl -fsSLO hogehogheohgoe.tar.gz
